{
  "name": "bitburner-scripts",
  "version": "1.0.0",
  "description": "A collection of scripts for the Bitburner incremental game",
  "main": "index.js",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "deploy": "npm run build && node tools/deploy.js",
    "clean": "rm -rf game-scripts/",
    "setup": "mkdir -p src/{scripts,utils,types,config} game-scripts tests docs examples tools"
  },
  "keywords": [
    "bitburner",
    "game",
    "scripts",
    "automation",
    "hacking"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
